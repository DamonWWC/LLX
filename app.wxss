/**app.wxss - 淘宝风格全局样式**/

/* 全局页面设置 - 防止左右滑动 */
page {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  overflow-y: auto;
  box-sizing: border-box;
  --primary-color: #ff6034;
  --primary-gradient: linear-gradient(135deg, #ff6034 0%, #ee0a24 100%);
  --secondary-color: #ee0a24;
  --background-color: #f5f5f5;
  --card-background: #ffffff;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-color: #e5e5e5;
  --border-light: #f0f0f0;
  --shadow-light: rgba(0, 0, 0, 0.04);
  --shadow-medium: rgba(0, 0, 0, 0.08);
  --shadow-primary: rgba(255, 96, 52, 0.3);
}

/* 全局容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
}

/* 全局文字样式 */
text {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Helvetica Neue",
    Arial, sans-serif;
}

/* 全局按钮样式重置 */
button::after {
  border: none;
}

/* 全局滚动优化 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background: transparent;
}
