<!--pages/my/my.wxml-->
<view class="container">
  <!-- 顶部卡片 -->
  <view class="top-card">
    <view class="user-info">
      <view class="avatar">👤</view>
      <view class="user-text">
        <text class="username">林龍香商城用户</text>
      </view>
    </view>
  </view>

  <!-- 我的订单 -->
  <view class="menu-section">
    <view class="menu-title">我的订单</view>
    <view class="menu-grid">
      <view class="menu-item" bindtap="goToOrders" data-status="待付款">
        <view class="menu-icon">⏰</view>
        <text class="menu-text">待付款</text>
        <view class="menu-badge" wx:if="{{pendingPaymentCount > 0}}">{{pendingPaymentCount}}</view>
      </view>
      <view class="menu-item" bindtap="goToOrders" data-status="待发货">
        <view class="menu-icon">📦</view>
        <text class="menu-text">待发货</text>
        <view class="menu-badge" wx:if="{{pendingShippingCount > 0}}">{{pendingShippingCount}}</view>
      </view>
      <view class="menu-item" bindtap="goToOrders" data-status="已发货">
        <view class="menu-icon">🚚</view>
        <text class="menu-text">已发货</text>
        <view class="menu-badge" wx:if="{{shippedCount > 0}}">{{shippedCount}}</view>
      </view>
      <view class="menu-item" bindtap="goToOrders" data-status="全部">
        <view class="menu-icon">📋</view>
        <text class="menu-text">全部订单</text>
        <view class="menu-badge" wx:if="{{totalOrderCount > 0}}">{{totalOrderCount}}</view>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-title">我的服务</view>
    <view class="menu-grid">
      <view class="menu-item" bindtap="goToAddress">
        <view class="menu-icon">📍</view>
        <text class="menu-text">收货地址</text>
        <view class="menu-badge" wx:if="{{addressCount > 0}}">{{addressCount}}</view>
      </view>
      <view class="menu-item" bindtap="goToShipping">
        <view class="menu-icon">🚚</view>
        <text class="menu-text">运费标准</text>
      </view>
    </view>
  </view>
</view>

