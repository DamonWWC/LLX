/* pages/my/my.wxss - 淘宝风格 */
page {
  background-color: #f5f5f5;
  height: 100vh;
  width: 100%;
  overflow-x: hidden;
}

.container {
  padding: 0;
  padding-bottom: calc(
    100rpx + env(safe-area-inset-bottom)
  ); /* 为tabBar留出空间 */
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* 顶部卡片 - 淘宝个人中心风格 */
.top-card {
  background: linear-gradient(135deg, #ff6034 0%, #ee0a24 100%);
  border-radius: 0;
  padding: 50rpx 24rpx 40rpx;
  margin: 0 0 2rpx 0;
  box-shadow: none;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 70rpx;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.username {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 4rpx;
}

.user-tip {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 功能菜单 - 全屏宽度 */
.menu-section {
  background-color: #ffffff;
  border-radius: 0;
  padding: 32rpx 24rpx;
  margin-bottom: 2rpx;
  box-shadow: none;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

.menu-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.menu-grid {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.menu-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f7f8fa 0%, #ffffff 100%);
  border-radius: 16rpx;
  padding: 48rpx 28rpx;
  border: 2rpx solid #f0f0f0;
  position: relative;
  transition: all 0.2s;
  min-height: 180rpx;
}

.menu-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #e8e8e8 0%, #f0f0f0 100%);
}

.menu-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.menu-badge {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  background-color: #ff6034;
  color: #ffffff;
  font-size: 24rpx;
  padding: 6rpx 14rpx;
  border-radius: 24rpx;
  min-width: 40rpx;
  text-align: center;
  font-weight: bold;
}
