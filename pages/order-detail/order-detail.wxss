/* pages/order-detail/order-detail.wxss */
page {
  background-color: #f5f5f5;
  height: 100vh;
}

.container {
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.detail-content {
  padding: 20rpx;
}

/* 订单状态 */
.status-section {
  background: linear-gradient(135deg, #ff6034 0%, #ee0a24 100%);
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 96, 52, 0.3);
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  letter-spacing: 2rpx;
}

/* 订单号 */
.order-no-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.order-no-section .label {
  font-size: 28rpx;
  color: #666666;
}

.order-no-section .value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  font-family: monospace;
}

/* 通用section */
.section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row.address {
  align-items: flex-start;
}

.info-row .label {
  font-size: 28rpx;
  color: #666666;
  min-width: 140rpx;
}

.info-row .value {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  text-align: right;
  word-break: break-all;
}

.info-row.address .value {
  text-align: right;
  line-height: 1.6;
}

.info-row .value.status {
  color: #ff6034;
  font-weight: bold;
}

/* 商品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  padding: 20rpx;
  background-color: #fafafa;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff6034;
}

.product-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.product-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.5;
}

.product-detail {
  font-size: 26rpx;
  color: #ff6034;
  font-weight: bold;
  line-height: 1.5;
}

/* 价格行 */
.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.price-row:last-child {
  border-bottom: none;
}

.price-row .label {
  font-size: 28rpx;
  color: #666666;
}

.price-row .value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.price-row.total {
  border-top: 2rpx solid #f0f0f0;
  padding-top: 24rpx;
  margin-top: 12rpx;
}

.price-row.total .label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.price-row .value.grand {
  font-size: 40rpx;
  color: #ff6034;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}
