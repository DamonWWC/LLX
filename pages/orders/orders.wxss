/* pages/orders/orders.wxss - 淘宝风格 */
page {
  background-color: #f5f5f5;
  height: 100vh;
  width: 100%;
  overflow-x: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 搜索栏 */
.search-bar {
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #e5e5e5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 0 20rpx;
  height: 80rpx;
  flex: 1;
}

.search-icon {
  font-size: 32rpx;
  color: #999999;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  height: 100%;
  line-height: 80rpx;
}

.search-input::placeholder {
  color: #999999;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #cccccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
  transition: all 0.2s;
}

.clear-btn:active {
  background-color: #999999;
  transform: scale(0.9);
}

.clear-btn text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

/* 多选模式切换按钮 */
.multi-select-toggle {
  background-color: #1890ff;
  color: #ffffff;
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.2s;
  white-space: nowrap;
}

.multi-select-toggle:active {
  background-color: #096dd9;
  transform: scale(0.95);
}

/* 搜索结果提示 */
.search-result-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background-color: #ffffff;
  margin: 20rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.tip-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.tip-text {
  font-size: 32rpx;
  color: #666666;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.tip-hint {
  font-size: 26rpx;
  color: #999999;
}

/* 订单列表滚动 - 淘宝风格 */
.order-list {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 20rpx 24rpx 180rpx;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  cursor: pointer;
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item:active {
  background-color: #fafafa;
  border-color: #e5e5e5;
}

.order-item.selected {
  border-color: #1890ff;
  background-color: #f0f8ff;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #e0e0e0;
  margin-bottom: 16rpx;
}

.order-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 多选复选框 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  transition: all 0.2s;
}

.checkbox-icon {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

.checkbox-icon.checked {
  color: #1890ff;
}

.order-item.selected .checkbox {
  border-color: #1890ff;
  background-color: #1890ff;
}

.order-item.selected .checkbox-icon.checked {
  color: #ffffff;
}

.order-no {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.order-status {
  font-size: 28rpx;
  color: #ff6034;
  font-weight: bold;
}

/* 订单内容 */
.order-content {
  margin-bottom: 16rpx;
}

.order-address {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-top: 2rpx dashed #e0e0e0;
  border-bottom: 2rpx dashed #e0e0e0;
  margin: 12rpx 0;
}

.address-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  line-height: 1.5;
}

/* 订单金额和付款状态容器 */
.order-price-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.order-price {
  display: flex;
  align-items: center;
}

.price-label {
  font-size: 30rpx;
  color: #666666;
  margin-right: 10rpx;
}

.price-value {
  font-size: 40rpx;
  color: #ff6034;
  font-weight: bold;
}

/* 快递信息 */
.shipping-info {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  margin: 8rpx 0;
  padding: 12rpx 16rpx;
}

.shipping-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.shipping-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 8rpx;
}

.tracking-number {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
  flex: 1;
}

/* 发货时间 */
.shipping-time {
  display: flex;
  align-items: center;
  padding: 6rpx 0;
}

.shipping-time-label {
  font-size: 24rpx;
  color: #999999;
  margin-right: 8rpx;
}

.shipping-time-value {
  font-size: 24rpx;
  color: #666666;
}

.order-time {
  text-align: right;
  padding-top: 8rpx;
}

.order-time text {
  font-size: 26rpx;
  color: #999999;
}

/* 付款状态 - 右侧显示 */
.order-payment-status {
  display: flex;
  align-items: center;
}

.payment-label {
  font-size: 26rpx;
  color: #666666;
  margin-right: 12rpx;
}

.payment-status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.payment-status.paid {
  color: #52c41a;
  background-color: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.payment-status.unpaid {
  color: #ff4d4f;
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
}

/* 订单操作 - 淘宝风格 */
.order-actions {
  display: flex;
  gap: 8rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #e8e8e8;
  flex-wrap: wrap;
  position: relative;
}

.action-btn {
  flex: 1;
  min-width: 120rpx;
  text-align: center;
  padding: 14rpx 8rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  background-color: #ffffff;
  color: #666666;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s;
  font-weight: 500;
}

.action-btn:active {
  transform: scale(0.96);
  background-color: #f5f5f5;
}

.action-btn.export {
  color: #1890ff;
  border-color: #91d5ff;
  background-color: #e6f7ff;
}

.action-btn.export:active {
  background-color: #bae7ff;
}

.action-btn.export-shipping {
  color: #722ed1;
  border-color: #d3adf7;
  background-color: #f9f0ff;
}

.action-btn.export-shipping:active {
  background-color: #efdbff;
}

.action-btn.share {
  color: #52c41a;
  border-color: #b7eb8f;
  background-color: #f6ffed;
}

.action-btn.share:active {
  background-color: #d9f7be;
}

.action-btn.delete {
  color: #ff4d4f;
  border-color: #ffccc7;
  background-color: #fff5f5;
}

.action-btn.delete:active {
  background-color: #ffe8e8;
}

.action-btn.status-update {
  color: #ff9500;
  border-color: #ffd591;
  background-color: #fff7e6;
}

.action-btn.status-update:active {
  background-color: #ffe7ba;
}

.action-btn.tracking-btn {
  color: #13c2c2;
  border-color: #87e8de;
  background-color: #e6fffb;
}

.action-btn.tracking-btn:active {
  background-color: #b5f5ec;
}

/* 更多按钮样式 */
.more-btn-wrapper {
  position: relative;
  flex: 1;
  min-width: 120rpx;
}

.more-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.arrow {
  font-size: 20rpx;
  transition: transform 0.2s;
}

.arrow.up {
  transform: rotate(180deg);
}

/* 更多菜单样式 */
.more-menu {
  position: absolute;
  top: 100%;
  left: 0;
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  min-width: 120rpx;
  opacity: 0;
  transform: translateY(-10rpx);
  transition: all 0.2s;
  pointer-events: none;
}

.more-menu.show {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.more-menu-item {
  padding: 20rpx 24rpx;
  font-size: 24rpx;
  color: #666666;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
  transition: background-color 0.2s;
}

.more-menu-item:last-child {
  border-bottom: none;
}

.more-menu-item:active {
  background-color: #f5f5f5;
}

.more-menu-item.delete {
  color: #ff4d4f;
}

.more-menu-item.delete:active {
  background-color: #fff2f0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #666666;
}

.empty-hint {
  font-size: 30rpx;
  color: #999999;
}

/* 多选模式底部操作栏 */
.multi-select-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 30rpx 24rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
  width: 100%;
  max-width: 100vw;
  border-top: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.selected-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.selected-count {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.total-amount {
  font-size: 36rpx;
  color: #ff6034;
  font-weight: bold;
}

/* 底部清空按钮 - 淘宝风格 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
  width: 100%;
  max-width: 100vw;
  border-top: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.clear-all-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff1f1f 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 20rpx rgba(255, 77, 79, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.clear-all-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(255, 77, 79, 0.4);
}

/* 隐藏Canvas */
.order-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  z-index: -1;
}
