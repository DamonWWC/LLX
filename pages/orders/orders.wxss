/* pages/orders/orders.wxss - 淘宝风格 */
page {
  background-color: #f5f5f5;
  height: 100vh;
  width: 100%;
  overflow-x: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  box-sizing: border-box;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 订单列表滚动 - 淘宝风格 */
.order-list {
  flex: 1;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 20rpx 24rpx 180rpx;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

.order-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.order-item:last-child {
  margin-bottom: 0;
}

.order-item:active {
  background-color: #fafafa;
  border-color: #e5e5e5;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
  margin-bottom: 20rpx;
}

.order-no {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.order-status {
  font-size: 28rpx;
  color: #ff6034;
  font-weight: bold;
}

/* 订单内容 */
.order-content {
  margin-bottom: 20rpx;
}

.order-products {
  margin-bottom: 16rpx;
}

.product-item {
  display: flex;
  flex-direction: column;
  padding: 12rpx 0;
  gap: 8rpx;
}

.product-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.5;
}

.product-detail {
  font-size: 28rpx;
  color: #ff6034;
  font-weight: bold;
  line-height: 1.5;
}

.product-quantity {
  font-size: 30rpx;
  color: #999999;
}

.order-address {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-top: 2rpx dashed #e0e0e0;
  border-bottom: 2rpx dashed #e0e0e0;
  margin: 16rpx 0;
}

.address-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.address-text {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  line-height: 1.5;
}

.order-price {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 16rpx 0;
}

.price-label {
  font-size: 30rpx;
  color: #666666;
  margin-right: 10rpx;
}

.price-value {
  font-size: 40rpx;
  color: #ff6034;
  font-weight: bold;
}

.order-time {
  text-align: right;
  padding-top: 12rpx;
}

.order-time text {
  font-size: 26rpx;
  color: #999999;
}

/* 订单操作 - 淘宝风格 */
.order-actions {
  display: flex;
  gap: 12rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #e8e8e8;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  text-align: center;
  padding: 18rpx 12rpx;
  border-radius: 50rpx;
  font-size: 26rpx;
  background-color: #ffffff;
  color: #666666;
  border: 1rpx solid #e0e0e0;
  transition: all 0.2s;
  font-weight: 500;
}

.action-btn:active {
  transform: scale(0.96);
  background-color: #f5f5f5;
}

.action-btn.export {
  color: #1890ff;
  border-color: #91d5ff;
  background-color: #e6f7ff;
}

.action-btn.export:active {
  background-color: #bae7ff;
}

.action-btn.export-shipping {
  color: #722ed1;
  border-color: #d3adf7;
  background-color: #f9f0ff;
}

.action-btn.export-shipping:active {
  background-color: #efdbff;
}

.action-btn.share {
  color: #52c41a;
  border-color: #b7eb8f;
  background-color: #f6ffed;
}

.action-btn.share:active {
  background-color: #d9f7be;
}

.action-btn.delete {
  color: #ff4d4f;
  border-color: #ffccc7;
  background-color: #fff5f5;
}

.action-btn.delete:active {
  background-color: #ffe8e8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  color: #999999;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #666666;
}

.empty-hint {
  font-size: 30rpx;
  color: #999999;
}

/* 底部清空按钮 - 淘宝风格 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  padding: 20rpx 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 999;
  width: 100%;
  max-width: 100vw;
  border-top: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}

.clear-all-btn {
  width: 100%;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff1f1f 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 20rpx rgba(255, 77, 79, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 2rpx;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.clear-all-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(255, 77, 79, 0.4);
}

/* 隐藏Canvas */
.order-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  z-index: -1;
}
