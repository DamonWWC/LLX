<!--pages/shipping/shipping.wxml-->
<view class="container">
  <!-- 顶部说明 -->
  <view class="header-section">
    <view class="header-title">运费标准</view>
    <view class="header-desc">根据不同省份计算运费，单价×重量=运费</view>
    <view class="info-btn" bindtap="viewShippingInfo">
      <text>ℹ️ 查看区间说明</text>
    </view>
  </view>

  <!-- 搜索框 -->
  <view class="search-section">
    <input 
      class="search-input" 
      placeholder="搜索省份..." 
      value="{{searchKey}}"
      bindinput="onSearchInput"
    />
  </view>

  <!-- 运费列表 -->
  <scroll-view class="rate-list" scroll-y>
    <view class="rate-item" wx:for="{{shippingRates}}" wx:key="province">
      <view class="rate-left">
        <text class="province-name">{{item.province}}</text>
      </view>
      <view class="rate-right">
        <text class="rate-value">¥{{item.rate}}</text>
        <text class="rate-unit">/斤</text>
      </view>
    </view>
    
    <view class="empty-hint" wx:if="{{shippingRates.length === 0}}">
      <text>未找到相关省份</text>
    </view>
  </scroll-view>

  <!-- 底部提示 -->
  <view class="bottom-hint">
    <text>💡 运费 = 商品总重量(斤) × 运费单价(元/斤)</text>
  </view>
</view>

