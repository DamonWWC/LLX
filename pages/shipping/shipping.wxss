/* pages/shipping/shipping.wxss */
page {
  background-color: #f7f8fa;
  height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding-bottom: 100rpx;
}

/* 顶部说明 */
.header-section {
  background: linear-gradient(135deg, #ff6034 0%, #ee0a24 100%);
  padding: 40rpx 32rpx;
  color: #ffffff;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 20rpx;
}

.info-btn {
  display: inline-block;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 搜索框 */
.search-section {
  padding: 20rpx 24rpx;
  background-color: #ffffff;
}

.search-input {
  background-color: #f7f8fa;
  border-radius: 40rpx;
  padding: 20rpx 32rpx;
  font-size: 28rpx;
}

/* 运费列表 */
.rate-list {
  flex: 1;
  overflow-y: auto;
  padding: 0 24rpx 20rpx;
}

.rate-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.rate-left {
  flex: 1;
}

.province-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.rate-right {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.rate-value {
  font-size: 36rpx;
  color: #ff6034;
  font-weight: bold;
}

.rate-unit {
  font-size: 24rpx;
  color: #999999;
}

.empty-hint {
  text-align: center;
  padding: 100rpx 0;
  color: #999999;
  font-size: 28rpx;
}

/* 底部提示 */
.bottom-hint {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff3e0;
  padding: 24rpx 32rpx;
  text-align: center;
  color: #ff9800;
  font-size: 26rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}
